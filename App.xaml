<Application x:Class="CCLS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CCLS"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <!-- 动态字体资源 - 使用系统默认字体 -->
            <FontFamily x:Key="CurrentConfigFontFamily">Microsoft YaHei UI</FontFamily>
            <sys:Double x:Key="CurrentConfigFontSize">14</sys:Double>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MetroStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>